@model GranModelo

<form id="formIntegrantes">
    <div class="modal fade bd-example-modal-xl" id="modalIntegrantes" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="integranteID" asp-for="Integrante.IntegranteID" />

                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Integrante</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 mt-2">
                            <div class="form-group">
                                <label asp-for="Integrante.CURP" class="control-label">CURP<span class="text-danger font-weight-bold">*</span>:</label><span asp-validation-for="Integrante.CURP" class="text-danger Integrantes ErrorInput"></span>
                                <input asp-for="Integrante.CURP" id="integranteCurp" type="text" class="form-control" placeholder="CURP" required oninput="errorCurp(this);" oninvalid="errorCurp(this);" />
                            </div>
                        </div>
                        <div class="col-md-1 mt-2">
                            <div class="d-flex">
                                <input type="image" class="rounded btn btn-block imageback tamanoIMG" src="~/icon/search-solid.svg" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mt-2">
                            <div class="form-group">
                                <label asp-for="Integrante.nombre" class="control-label">Nombre<span class="text-danger font-weight-bold">*</span>:</label><span asp-validation-for="Integrante.nombre" class="text-danger Integrantes ErrorInput"></span>
                                <input id="integranteNombre" asp-for="Integrante.nombre" type="text" class="form-control" placeholder="Nombre" required />
                            </div>
                        </div>
                        <div class="col-md-4 mt-2">
                            <div class="form-group">
                                <label asp-for="Integrante.apellido_paterno" class="control-label">Apellido Paterno<span class="text-danger font-weight-bold">*</span>:</label><span asp-validation-for="Integrante.apellido_paterno" class="text-danger Integrantes ErrorInput"></span>
                                <input id="integranteApellidoPaterno" asp-for="Integrante.apellido_paterno" type="text" class="form-control" placeholder="Apellido Paterno" required />
                            </div>
                        </div>
                        <div class="col-md-4 mt-2">
                            <div class="form-group">
                                <label asp-for="Integrante.apellido_materno" class="control-label">Apellido Materno:</label><span asp-validation-for="Integrante.apellido_materno" class="text-danger"></span>
                                <input id="integranteApellidoMaterno" asp-for="Integrante.apellido_materno" type="text" class="form-control" placeholder="Apellido Materno" />
                            </div>
                            <div class="form-group" style="display: none;">                                
                                <input id="integrantePersonaID" type="text" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button class="btn btn-danger" id="btnCancelarDom" data-dismiss="modal" aria-label="Close">Cancelar</button>
                    <button class="btn btn-primary" id="btnModalIntegrante">Gua</button>
                </div>
            </div>
        </div>
    </div>
</form>