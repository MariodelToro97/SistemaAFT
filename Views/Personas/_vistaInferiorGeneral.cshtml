    <div class="mx-auto">
        <a asp-action="Index">Regresar</a>
        <button type="button" class="mx-5 btn btn-dark text-white" onclick="reinicializarTodo()">Limpiar todo</button>
        <button class="btn btn-success" id="guardarPersonas">Guardar</button>
    </div>
</div>