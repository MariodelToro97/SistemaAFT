@model GranModelo

<form id="formRepresentantes">
    <div class="modal fade bd-example-modal-xl" id="modalRepresentantes" tabindex="-1" role="dialog" aria-labelledby="modalRepre" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="representanteID" asp-for="Representante.RepresentanteID" />

                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Representante</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 mt-2">
                            <div class="form-group">
                                <label asp-for="Representante.CURP" class="control-label">CURP<span class="text-danger font-weight-bold">*</span>:</label><span asp-validation-for="Representante.CURP" class="text-danger Representantes ErrorInput"></span>
                                <input asp-for="Representante.CURP" id="representanteCurp" type="text" class="form-control" placeholder="CURP" required />
                            </div>
                        </div>
                        <div class="col-md-1 mt-2">
                            <div class="d-flex">
                                <input type="image" class="rounded btn btn-block imageback tamanoIMG" src="~/icon/search-solid.svg" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mt-2">
                            <div class="form-group">
                                <label asp-for="Representante.nombre" class="control-label">Nombre<span class="text-danger font-weight-bold">*</span>:</label><span asp-validation-for="Representante.nombre" class="text-danger Representantes ErrorInput"></span>
                                <input id="representanteNombre" asp-for="Representante.nombre" type="text" class="form-control" placeholder="Nombre" required />
                            </div>
                        </div>
                        <div class="col-md-4 mt-2">
                            <div class="form-group">
                                <label asp-for="Representante.apellido_paterno" class="control-label">Apellido Paterno<span class="text-danger font-weight-bold">*</span>:</label><span asp-validation-for="Representante.apellido_paterno" class="text-danger Representantes ErrorInput"></span>
                                <input id="representanteApellidoPaterno" asp-for="Representante.apellido_paterno" type="text" class="form-control" placeholder="Apellido Paterno" required />
                            </div>
                        </div>
                        <div class="col-md-4 mt-2">
                            <div class="form-group">
                                <label asp-for="Representante.apellido_materno" class="control-label">Apellido Materno:</label><span asp-validation-for="Representante.apellido_materno" class="text-danger"></span>
                                <input id="representanteApellidoMaterno" asp-for="Representante.apellido_materno" type="text" class="form-control" placeholder="Apellido Materno" />
                            </div>
                            <div class="form-group" style="display: none;">
                                <input id="representantePersonaID" type="text" />
                            </div>
                        </div>
                    </div>

                    <div class="rounded border border-secondary">
                        <div class="form-inline d-flex bg-dark rounded">
                            <h4 class="my-3 mx-3 text-white font-weight-lighter">Documentos del Representante</h4>
                            <button type="button" class="btn btn-light btn-rounded mr-3 my-3 ml-auto" id="representanteModal" data-toggle="modal" data-target="#modalDocumentoRepresentantes" disabled>Agregar</button>
                        </div>

                        <div class="container">
                            <table class="table table-sm table-secondary my-3" id="tableDocumentosRepresentante">
                                <thead class="thead-light text-center">
                                    <tr>
                                        <th>Tipo documento</th>
                                        <th>Folio documento</th>
                                        <th>Fecha documento</th>
                                        <th>Editar</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>

                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button class="btn btn-danger" id="btnCancelarRepresentante" data-dismiss="modal" aria-label="Close">Cancelar</button>
                        <button class="btn btn-primary" id="btnModalRepresentante">Gua</button>
                    </div>
                </div>
        </div>
    </div>
</form>